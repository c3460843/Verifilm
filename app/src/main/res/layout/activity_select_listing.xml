<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="c346084.verifilm.SelectListing">

    <Button
        android:id="@+id/button_lcontinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="reviewForm"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_listings" />

    <Spinner
        android:id="@+id/spinner_listings"
        android:layout_width="337dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toTopOf="@+id/button_lcontinue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewListing" />

    <TextView
        android:id="@+id/textViewListing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a listing:"
        app:layout_constraintBottom_toTopOf="@+id/spinner_listings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
