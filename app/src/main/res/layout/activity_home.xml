<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313131"
    tools:context="c346084.verifilm.Home">

    <Button
        android:id="@+id/create_new_review"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:onClick="newReview"
        android:text="Create New Review"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBrowse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="68dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toTopOf="@+id/create_new_review"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/buttonBrowse"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:onClick="browseReviews"
        android:text="Browse My Reviews"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_new_review" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:onClick="settings"
        android:text="Settings"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBrowse" />

</android.support.constraint.ConstraintLayout>
